<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CardViewText">
        <item name="android:ellipsize">end</item>
        <item name="maxLines">2</item>
        <item name="android:textSize">@dimen/cardview_item_list_text_size</item>
    </style>

    <style name="DetailLabel">
        <item name="android:textSize">@dimen/detail_label_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="DetailDescription">
        <item name="android:textSize">@dimen/detail_description_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginTop">@dimen/detail_description_text_margin_top</item>
    </style>

    <style name="DetailButtonLabel">
        <item name="android:background">@drawable/round_rectangle_ripple_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">16dp</item>
    </style>

</resources>